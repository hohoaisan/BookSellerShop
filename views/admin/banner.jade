extends base
block content
    h3.mt-4.mb-4 Quản lí Banner
    if (title)
        h4.mt-4.mb-4= title
    .d-flex.justify-content-between.align-items-center.mb-2
        a(href="/admin/banner/add")
            .btn.btn-primary.mr-4 Thêm banner mới
    .mb-4
        if (messages)
        each message in messages
            .alert.alert-success= message
        if (errors)
        each error in errors
            .alert.alert-warning= error
        if (books)
        table.table.table-sm
            thead
                tr
                    th Mã sách banner
                    th Banner Image Url
            tbody
                each val in banners
                    tr
                        td= val.bookid
                        td= val.customimage
                        td.tablecell-action
                            form(action="/admin/banner/" + val.bookid + "/delete", method="POST")
                                button(type="submit").btn.btn-danger Xoá banner          
    append external
    