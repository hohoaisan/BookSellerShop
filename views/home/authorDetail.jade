extends base
block content
    .container
        if (listBooks) 
            nav(aria-label='breadcrumb')
                ol.breadcrumb
                    li.breadcrumb-item
                        a(href='/') Home
                    li.breadcrumb-item
                        a(href='/authors') Tác giả
                    li.breadcrumb-item.active(aria-current='page')= author.authorname
            .row.mt-4
                .col-12.col-md-4 
                    .col-md-12
                        .authorPic
                            img.img-rounded(src='https://picsum.photos/300',width="300px", height="300px", alt='')
                    .col-md-12.mt-2.details.authorBorder
                        blockquote
                            h5= author.authorname
                        p= author.authordescription
                .col-12.col-md-8                                
                    .row.mb-0.ml-1.mr-1
                        each book in listBooks
                            .col-6.col-sm-4.col-lg-3.pl-1.pr-1.mb-4
                                .card.card-inverse.card-info
                                    a(href='/books/' + book.bookid)
                                        img.card-img-top(src='/assets/img/books/' + book.bookimageurl)
                                    .card-block(style="height: 4em; overflow:hidden;")
                                        .card-title= book.bookname
                                    .card-footer
                                        small= book.price + ' đ'
                                        button.btn.btn-primary.float-right.btn-sm.select_product.add-to-cart(data-bookid=book.bookid) BUY 
                    ul.pagination.float-right
                        each page in pagination
                            li.page-item(class=(page.index==pagination_current_page)?"active":"")
                                a.page-link(href=page.url)= page.index
        else
            .alert.alert-warning Không tìm thấy sách theo tác giả