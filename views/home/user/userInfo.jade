extends base
block vars
  - var user_list='profile';
block profile-content
  h5 Thông tin tài khoản
  .row.mt-2.p-2
    .col-12
      form#editAddress(action="/user/profile" method="POST")
        .row
          .col
            label.text-center.font-weight-bold Địa chỉ hiện tại
        .form-group.row
          label.col-sm-3.col-form-label Họ tên
          .col-sm-9
            input.form-control.form-control-sm(type='text' name="fullname" value=user.fullname)
        .form-group.row
          label.col-sm-3.col-form-label Điện thoại
          .col-sm-9
            input.form-control.form-control-sm(type='text' name="phone" value=user.phone)
        .form-group.row
          label.col-sm-3.col-form-label Email
          .col-sm-9
            input.form-control.form-control-sm(type='text' name="email" value=user.email)
        .form-group.row
          label.col-sm-3.col-form-label Giới tính
          .col-sm-9
            select.form-control.form-control-sm(name="male")
              option(value='1', selected=user.male=='1') Nam
              option(value='0', selected=user.male=='0') Nữ
        .form-group.row
          label.col-sm-3.col-form-label Ngày sinh
          .col-sm-9
            input.form-control.form-control-sm(type='date' name="dob" value=user.dob)
        .row
          .col-6
            button.btn.btn-success.btn-sm.float-left(type="submit") Lưu
          .col-6